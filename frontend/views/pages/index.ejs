<!DOCTYPE html>

<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <%- include('../partials/header'); %>


    <!-- Tarjetas de productos -->
    <div class="d-flex justify-content-start flex-wrap gap-3 m-5">
        <% productos.forEach(producto => { %>
            <div class="card" style="width: 18rem;">
                  <img src="<%= producto.imagen %>" class="card-img-top" alt="<%= producto.imagen %>" width="150" height="300">
                <div class="card-body">
                    <input type="hidden" id="id_<%= producto._id %>" value="<%= producto._id %>">
                    <h5 class="card-title"><%= producto.nombre %></h5>
                    <small class="card-text"><%= producto.categoria.nombre %></small>
                    <div class="d-flex justify-content-between">
                        <p class="card-text fs-5 fw-bold">$ <%= producto.precio %></p>
                    </div>
                    <button class="btn btn-outline-primary w-100 mt-3" onclick="agregarBolsa('<%= producto._id %>', '<%= producto.referencia %>', '<%= producto.nombre %>', '<%= producto.categoria.nombre %>', '<%= producto.descripcion %>', '<%= producto.precio %>', '<%= producto.stock %>','<%= producto.imagen %>', '<%= producto.habilitado %>')">Agregar al carrito</button>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include ('../partials/footer'); %>

</body>